{
  "name": "daily-tool-updates",
  "version": "1.0.0",
  "description": "CLI tool to capture, research, score, and build Claude-related tools from Grok Tasks daily updates",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "dtu": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "capture": "bun run src/index.ts capture",
    "parse": "bun run src/index.ts parse",
    "research": "bun run src/index.ts research",
    "score": "bun run src/index.ts score",
    "report": "bun run src/index.ts report",
    "daily": "bun run src/index.ts daily",
    "build": "bun run src/index.ts build"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.0",
    "octokit": "^4.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.5.0"
  }
}
